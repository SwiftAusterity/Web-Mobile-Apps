{
  "manifest_version": 2,

  "name": "Twueism",
  "description": "This extension changes all instances of the word TRUE to TWUE",
  "version": "1.0",
  "background": {
      "scripts": ["listener.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["twueism.js"]
    }
  ],
  "permissions": [
    "webNavigation", "tabs", "*://*/*"
  ]
}